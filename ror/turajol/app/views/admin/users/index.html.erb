<h2>Ручная активация пользователей</h2>

<table class="table table-striped table-bordered " >
  <tr>
    <th>Номер телефон</th>
    <th>Код подтверждения</th>
    <th>Дата активации</th>
    <th>Действие</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.phone  %></td>
        <td><%= user.verification_code  %></td>
        <td><%= user.code_confirmed_at %></td>
        <td>
          <%= button_to 'Активировать', admin_activate_path(phone: user.phone, verification_code: user.verification_code), method: :post%>
        </td>
      </tr>
  <% end %>
</table>
