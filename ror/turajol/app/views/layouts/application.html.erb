<!DOCTYPE html>
<html>
  <head>
    <title>Turajol</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% unless flash.empty? %>
    <% flash.each do |type, message| %>
      <div class="<%= type %>"><%= message %></div>
    <% end %>
  <% end %>
    <%= yield %>
  </body>
</html>
